{
  "formConfig": {
    "title": "SIP Goal Planning",
    "description": "Configure your systematic investment plan based on your financial goals",
    "fields": {
      "always_required": [
        {
          "name": "goal_type",
          "label": "Goal Type",
          "type": "select",
          "required": true,
          "options": [
            {
              "value": "Retirement",
              "label": "Retirement Planning"
            },
            {
              "value": "Child Education",
              "label": "Child Education"
            },
            {
              "value": "Child Marriage",
              "label": "Child Marriage"
            },
            {
              "value": "House Purchase",
              "label": "House Purchase"
            },
            {
              "value": "General Wealth Creation",
              "label": "General Wealth Creation"
            }
          ],
          "validation": {
            "enum": ["Retirement", "Child Education", "Child Marriage", "House Purchase", "General Wealth Creation"]
          }
        },
        {
          "name": "current_age",
          "label": "Current Age",
          "type": "number",
          "required": true,
          "validation": {
            "min": 18,
            "max": 80
          },
          "placeholder": "Enter your current age"
        },
        {
          "name": "currency",
          "label": "Currency",
          "type": "select",
          "required": true,
          "default": "INR",
          "options": [
            {
              "value": "INR",
              "label": "Indian Rupee (₹)"
            },
            {
              "value": "USD",
              "label": "US Dollar ($)"
            },
            {
              "value": "EUR",
              "label": "Euro (€)"
            }
          ]
        },
        {
          "name": "target_amount_min",
          "label": "Target Amount",
          "type": "number",
          "required": true,
          "validation": {
            "min": 1000
          },
          "placeholder": "Enter minimum target amount"
        },
        {
          "name": "risk_appetite",
          "label": "Risk Appetite",
          "type": "select",
          "required": true,
          "options": [
            {
              "value": "very_low",
              "label": "Very Low - Conservative (5% returns)"
            },
            {
              "value": "low",
              "label": "Low - Conservative (7% returns)"
            },
            {
              "value": "low_moderate",
              "label": "Low-Moderate (8% returns)"
            },
            {
              "value": "moderate",
              "label": "Moderate - Balanced (10% returns)"
            },
            {
              "value": "high_moderate",
              "label": "High-Moderate (11% returns)"
            },
            {
              "value": "high",
              "label": "High - Aggressive (12% returns)"
            },
            {
              "value": "very_high",
              "label": "Very High - Very Aggressive (14% returns)"
            }
          ]
        }
      ],
      "conditional_fields": {
        "Retirement": [
          {
            "name": "retirement_age",
            "label": "Retirement Age",
            "type": "number",
            "required": true,
            "validation": {
              "min": 50,
              "max": 80,
              "custom": "must_be_greater_than_current_age"
            },
            "placeholder": "Enter your target retirement age"
          }
        ],
        "Child Education": [
          {
            "name": "child_current_age",
            "label": "Child's Current Age",
            "type": "number",
            "required": true,
            "validation": {
              "min": 0,
              "max": 25
            },
            "placeholder": "Enter child's current age"
          },
          {
            "name": "education_start_age",
            "label": "Education Start Age",
            "type": "number",
            "required": true,
            "validation": {
              "min": 16,
              "max": 30,
              "custom": "must_be_greater_than_child_current_age"
            },
            "placeholder": "Age when higher education starts (e.g., 18)"
          }
        ],
        "Child Marriage": [
          {
            "name": "child_current_age",
            "label": "Child's Current Age",
            "type": "number",
            "required": true,
            "validation": {
              "min": 0,
              "max": 30
            },
            "placeholder": "Enter child's current age"
          },
          {
            "name": "marriage_age",
            "label": "Marriage Age",
            "type": "number",
            "required": true,
            "validation": {
              "min": 21,
              "max": 35,
              "custom": "must_be_greater_than_child_current_age"
            },
            "placeholder": "Expected age at marriage"
          }
        ],
        "House Purchase": [
          {
            "name": "target_purchase_year",
            "label": "Target Purchase Year",
            "type": "number",
            "required": true,
            "validation": {
              "min": 2025,
              "max": 2050,
              "custom": "must_be_future_year"
            },
            "placeholder": "Year you plan to purchase the house"
          }
        ],
        "General Wealth Creation": [
          {
            "name": "override_time_horizon_years",
            "label": "Time Horizon (Years)",
            "type": "number",
            "required": true,
            "validation": {
              "min": 1,
              "max": 40
            },
            "placeholder": "Investment time horizon in years"
          }
        ]
      }
    },
    "validation_rules": {
      "custom_validations": {
        "must_be_greater_than_current_age": {
          "message": "Must be greater than current age",
          "logic": "target_field > current_age"
        },
        "must_be_greater_than_child_current_age": {
          "message": "Must be greater than child's current age",
          "logic": "target_field > child_current_age"
        },
        "must_be_future_year": {
          "message": "Must be a future year",
          "logic": "target_field > current_year"
        }
      }
    },
    "ui_behavior": {
      "show_fields_on_goal_type_change": true,
      "reset_conditional_fields_on_goal_change": true,
      "auto_calculate_time_horizon": true
    }
  },
  "binding_map": {
    "goal_type": "formData.goal_type",
    "current_age": "formData.current_age",
    "retirement_age": "formData.retirement_age",
    "child_current_age": "formData.child_current_age",
    "education_start_age": "formData.education_start_age",
    "marriage_age": "formData.marriage_age",
    "target_purchase_year": "formData.target_purchase_year",
    "override_time_horizon_years": "formData.override_time_horizon_years",
    "currency": "formData.currency",
    "target_amount_min": "formData.target_amount_min",
    "risk_appetite": "formData.risk_appetite"
  },
  "computed_fields": {
    "time_horizon_years": {
      "Retirement": "max(override_time_horizon_years || 0, retirement_age - current_age)",
      "Child Education": "education_start_age - child_current_age",
      "Child Marriage": "marriage_age - child_current_age",
      "House Purchase": "target_purchase_year - new Date().getFullYear()",
      "General Wealth Creation": "override_time_horizon_years"
    },
    "total_months": "time_horizon_years * 12"
  },
  "sample_data": {
    "retirement_example": {
      "goal_type": "Retirement",
      "current_age": 30,
      "retirement_age": 60,
      "currency": "INR",
      "target_amount_min": 10000000,
      "risk_appetite": "moderate"
    },
    "child_education_example": {
      "goal_type": "Child Education",
      "current_age": 35,
      "child_current_age": 5,
      "education_start_age": 18,
      "currency": "INR",
      "target_amount_min": 2500000,
      "risk_appetite": "high_moderate"
    }
  }
}